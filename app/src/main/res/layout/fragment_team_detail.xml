<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/teamDetailFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeamInformation_DataClass">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/teamLogo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/manchestercity"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/scode_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/teamLogo"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:text=""/>

    <TextView
        android:id="@+id/teamProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scode_profile"
        android:text="Man City"
        android:textColor="@color/black"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/managerProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Pep Guardiola"
        android:layout_below="@id/teamProfile"
        android:textColor="@color/black"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/yearProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="1880"

        android:layout_below="@id/managerProfile"
        android:textColor="@color/black"
        android:textSize="26sp" />




</RelativeLayout>
